{
  "name": "phpunit-test-workbench",
  "displayName": "PHPUnit Test Workbench",
  "description": "",
  "repository": {
    "url": "https://github.com/chiefmyron/phpunit-test-workbench"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*.php"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "phpunit-test-workbench.runMethod",
        "title": "PHPUnit: Run test method"
      },
      {
        "command": "phpunit-test-workbench.runClass",
        "title": "PHPUnit: Run test class"
      },
      {
        "command": "phpunit-test-workbench.runSuite",
        "title": "PHPUnit: Run test suite"
      },
      {
        "command": "phpunit-test-workbench.runAll",
        "title": "PHPUnit: Run all tests"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "PHPUnit Test Workbench",
      "properties": {
        "phpunit-test-workbench.log.level": {
          "scope": "machine",
          "type": "number",
          "enum": [
            0,
            1,
            2,
            3,
            4
          ],
          "enumItemLabels": [
            "Trace",
            "Information",
            "Warning",
            "Error",
            "None"
          ],
          "default": 1,
          "markdownDescription": "Set the level of detail for log messages."
        },
        "phpunit-test-workbench.log.channel": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "panel",
            "file"
          ],
          "enumItemLabels": [
            "VS Code output panel",
            "Log file"
          ],
          "default": "panel",
          "markdownDescription": "Destination for logged messages."
        },
        "phpunit-test-workbench.log.file": {
          "scope": "resource",
          "type": "string",
          "markdownDescription": "Location to file to write logged messages to. Only applicable when the log channel is `file`."
        },
        "phpunit-test-workbench.php.binaryPath": {
          "scope": "resource",
          "type": "string",
          "markdownDescription": "Path to location of the PHP binary. If left blank, will attempt to use globally available binary."
        },
        "phpunit-test-workbench.phpunit.binaryPath": {
          "scope": "resource",
          "type": "string",
          "markdownDescription": "Path to location of the PHPUnit binary (either `phpunit` or `phpunit.phar`). If left blank, will attempt to find the binary in common locations:\n  - Composer vendor directory\n  - `phpunit.phar` in the current workspace\n  - Globally available `phpunit` (or `phpunit.bat`)"
        },
        "phpunit-test-workbench.phpunit.testOrganization": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "file",
            "namespace",
            "testsuite"
          ],
          "enumItemLabels": [
            "By file",
            "By namespace",
            "By test suite (defined in `phpunit.xml` file)"
          ],
          "default": "file",
          "markdownDescription": "Describes the way tests are organised in the Testing panel."
        },
        "phpunit-test-workbench.phpunit.locatorPatternTests": {
          "scope": "resource",
          "type": "string",
          "markdownDescription": "The glob describing the location of your test files. Default pattern is `{test,tests,Test,Tests}/**/*Test.php`.",
          "default": "{test,tests,Test,Tests}/**/*Test.php"
        },
        "phpunit-test-workbench.phpunit.locatorPatternPhpUnitXml": {
          "scope": "resource",
          "type": "string",
          "markdownDescription": "The glob describing the location of your `phpunit.xml` configuration file. If left blank, PHPUnit will fall back to default behaviour and attempt to find a `phpunit.xml` file in the test directory.",
          "default": "{test,tests,Test,Tests}/phpunit.xml"
        },
        "phpunit-test-workbench.phpunit.targetDirectory": {
          "scope": "resource",
          "type": "string",
          "markdownDescription": "Relative path from the workspace folder root to the directory to run tests from (usually the `tests` folder). If left blank, the workspace folder root will be used. Note that if a `phpunit.xml` file has been found with testsuites defined, this setting is ignored.",
          "default": ""
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "phpunit-test-workbench.runMethod",
          "when": "editorLangId == php"
        },
        {
          "command": "phpunit-test-workbench.runClass",
          "when": "editorLangId == php"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "php-parser": "^3.1.0"
  }
}
